            </tr>
            <tr>
                <td>{{ Lang.choice('user.user', 1) }} {{ Lang.get('user.country') }} {{ Lang.get('general.code') }}</td>
                <td><button class="as-link">{{ '{{ user.country }}' }}</button></td>
            </tr>
