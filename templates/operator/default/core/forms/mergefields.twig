            <tr>
                <td>{{ Lang.choice('user.user', 1) }} {{ Lang.choice('user.organisation', 1) }} {{ Lang.get('general.name') }}</td>
                <td><button class="as-link">{{ '{{ user.organisation.name }}' }}</button></td>
            </tr>
