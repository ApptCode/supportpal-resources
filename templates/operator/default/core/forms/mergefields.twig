            <tr>
                <td>{{ Lang.choice('user.user', 1) }} {{ Lang.get('user.lastname') }}</td>
                <td><button class="as-link">{{ '{{ user.lastname }}' }}</button></td>
            </tr>
            <tr>
                <td>{{ Lang.choice('user.user', 1) }} {{ Lang.get('general.email') }}</td>
                <td><button class="as-link">{{ '{{ user.email }}' }}</button></td>
            </tr>
