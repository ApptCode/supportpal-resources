<div id="sidebar" class="sidebar-close left">
    <i class="fa fa-angle-double-right toggle-sidebar hide"></i>

    <div class="sidebox">
        <h2>{{ Lang.choice('report.report', 2) }}</h2>
    </div>
    <div class="sidebox">
        <a href="{{ route('report.operator.dashboard') }}">
            {{ Lang.get('report.reports_dashboard') }}
        </a>
    </div>
    {% for category, reports in list %}
        <div class="sidebox">
            <h3>
                <i class="fa fa-bar-chart icon"></i>
                {{ category }}
            </h3>
            <ul>
                {% for item in reports %}
                <li {% if Request.is("*/" ~ item['slug']) %}class="current"{% endif %}>
                    <a href="{{ route('report.operator.view', [ category, item['slug'] ]) }}">{{ item['name'] }}</a>
                </li>
                {% endfor %}
            </ul>
        </div>
    {% endfor %}
</div>