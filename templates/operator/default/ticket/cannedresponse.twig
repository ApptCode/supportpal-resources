{% extends parent_template %}

{% block sidebar %}
    {% include 'operator.' ~ template ~ '.sidebar-settings' %}
{% endblock %}

{% block scripts_header %}
    <link href="{{ asset_rev('resources/assets/libs/datatables/css/jquery.dataTables.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block title %}
    {{ Lang.choice("ticket.cannedresponse", 2) }}
{% endblock %}

{% block content %}

    <div class="success box delete hide">
        {{ Lang.get('messages.success_deleted', { 'item': Lang.choice('ticket.cannedresponse', 1)|lower }) }}
    </div>
    <div class="fail box delete hide">
        {{ Lang.get('messages.error_deleted', { 'item': Lang.choice('ticket.cannedresponse', 1)|lower }) }}
    </div>

    <div class="grid-options options box">
        <a href="{{ route('ticket.operator.cannedresponse.create') }}">
            <i class="fa fa-plus"></i>&nbsp; {{ Lang.get("general.add") }} {{ Lang.choice("ticket.cannedresponse", 1) }}
        </a>
        &nbsp;&nbsp;
        <a class="filter-results">
            <i class="fa fa-filter"></i>&nbsp; {{ Lang.get('general.filter_results') }}
        </a>

        <div class="filters hide">
            <div>
                <label>{{ Lang.get('general.name') }}:</label>
                <div id="filter_response_name"></div>
            </div>
            <div>
                <label>{{ Lang.choice('ticket.tag', 1) }}:</label>
                <div id="filter_response_tag"></div>
            </div>
            <div>
                <label>{{ Lang.get('general.public') }}:</label>
                <div id="filter_response_public"></div>
            </div>
        </div>
    </div>

    {{ responsesTable.render()|raw }}
    {{ responsesTable.script()|raw }}

{% endblock %}

{% block scripts_footer %}
    <script src="{{ asset_rev('resources/assets/libs/datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset_rev('resources/assets/libs/datatables-responsive/js/dataTables.responsive.js') }}"></script>
    <link rel="stylesheet" type="text/css" href="{{ asset_rev('resources/assets/libs/datatables-responsive/css/dataTables.responsive.css') }}">

    <script src="{{ asset_rev('resources/assets/libs/sweetalert2/js/sweetalert2.min.js') }}"></script>
    <link rel="stylesheet" type="text/css" href="{{ asset_rev('resources/assets/libs/sweetalert2/css/sweetalert2.css') }}">
    <script src="{{ asset_rev('resources/assets/operator/js/delete.alert.js') }}"></script>

    <!-- Filter the table -->
    <script src="{{ asset_rev('resources/assets/libs/yadcf/js/jquery.dataTables.yadcf.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            /**
             * Initialise the filters
             */
            oTable.yadcf([
                {column_number : 0, column_data_type: "text", html_data_type: "selector", html_data_selector: "a", filter_container_id: "filter_response_name", filter_type: "text"},
                {column_number : 1, column_data_type: "html", html_data_type: "selector", html_data_selector: "a", filter_container_id: "filter_response_tag"},
                {column_number : 2, filter_container_id: "filter_response_public"}
            ]);
        });
    </script>
{% endblock %}