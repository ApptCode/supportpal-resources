<div class="reply-box">
    <div class="option_group">
        <div class="option_header">
            {{ Lang.get('ticket.reply_options') }}
            <div class="arrow show960 hide">
                <i class="fa fa-chevron-up"></i>
            </div>
        </div>
        <div class="option_content hide960">
            {% if extendedViews['reply_options']|default is not empty %}
                {% for view in extendedViews['reply_options'] %}
                    {% include view %}
                {% endfor %}
            {% endif %}

            {% if ticket.department_email_id is not empty %}
                {% if toEmails is not empty and (not ticket.internal or ticket.user_id != Auth.guard('operator').user().id) %}
                    <div class="option" id="emailToUsers">
                        <label>
                            {{ form_check('send_email_to_users', 1, true) }}
                            {{ Lang.get('ticket.send_email_to_users') }}
                        </label>
                    </div>
                {% endif %}
                <div class="option">
                    <label>
                        {{ form_check('send_email_to_operators', 1, ticket.internal and ticket.user_id == Auth.guard('operator').user().id ? true :
                            ticket.department.notify_operators ? true : false) }}
                        {{ Lang.get('ticket.send_email_to_operators') }}
                    </label>
                </div>
            {% endif %}
            <div class="option">
                <label>
                    {{ form_check('back_to_grid', 1) }}
                    {{ Lang.get('ticket.back_to_grid') }}
                </label>
            </div>
            <div class="option">
                <label>
                    {{ form_check('take_ownership', 1) }}
                    {{ Lang.get('ticket.take_ownership') }}
                </label>
            </div>
            {% if ticket.sla_plan_id is not empty and ticket.due_time is not empty
                and 'now'|date('U') < ticket.due_time %}
                <div class="option">
                    <label>
                        {{ form_check('pause_duetime', 1) }}
                        {{ Lang.get('ticket.pause_duetime') }}
                    </label>
                </div>
            {% endif %}
            <div class="option">
                <label>
                    {{ form_check('add_canned', 1) }}
                    {{ Lang.get('ticket.add_to_canned_responses') }}
                </label>
                <div id="cannedTr" style="display: none">
                    <input type="text" name="canned_name" placeholder="{{ Lang.get('general.name') }}" style="width: 100%;" />
                    <br />
                    <label>
                        {{ form_check('canned_public', 1) }}
                        {{ Lang.get('ticket.visible_to_all_operators') }}
                    </label>
                </div>
            </div>
            <div class="option">
                <label for="to_status">{{ Lang.get('ticket.set_status') }}:</label>
                <select id="to_status" name="to_status">
                {% for status in statuses %}
                    {# If the status is currently Closed, set the status to Open, otherwise use the current value #}
                    {% if ((ticket.status.id == Config.get('settings.default_resolved_status')
                            and status.id == Config.get('settings.default_open_status'))
                        or (ticket.status.id != Config.get('settings.default_resolved_status')
                            and ticket.status.id == status.id)
                    ) %}
                    <option value="{{ status.id }}" selected="selected">
                        {{ status.name }}
                    </option>
                    {% else %}
                    <option value="{{ status.id }}">
                        {{ status.name }}
                    </option>
                    {% endif %}
                {% endfor %}
                </select>
            </div>
        </div>
    </div>

</div>

<script type="text/javascript" src="{{ asset('resources/assets/operator/js/replyoptions.js') }}"></script>

<script type="text/javascript" src="{{ asset('resources/assets/general/js/done_typing.js') }}"></script>
<script type="text/javascript" src="{{ asset('resources/assets/general/js/sanitize.js') }}"></script>