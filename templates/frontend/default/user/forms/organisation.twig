    <div class="form-row">
        {{ form_label('organisation', Lang.choice('user.organisation', 1)) }}
        <div class="input-container">
            {{ form_text('organisation', organisation|default is not empty ? organisation.name : '',
                (organisation is not empty and (new is defined or record.organisation.owner_id != record.id))
                    ? { 'disabled': 'disabled', 'size': '30' } : { 'size': '30' }) }}

            {% if organisation|default is not empty and new is not defined and not record.organisation.isOwner(record.id) %}
                &nbsp; <button class="leave-organisation" type='button'>{{ Lang.get('user.leave_organisation') }}</button>
            {% elseif organisation|default is not empty and new is not defined and record.organisation.isOwner(record.id)  %}
                &nbsp; <a href="{{ route('user.organisation') }}"><button type='button'>{{ Lang.get('user.manage_organisation') }}</button></a>
            {% endif %}
        </div>
    </div>

    {% if new|default is not empty %}
    <div class="form-row">
        {{ form_label('access_level', Lang.get('user.access_level')|raw) }}
        <div class="input-container">
            {{ form_select('access_level', { 0: Lang.get('user.manager'), 1: Lang.choice('user.user', 1) }, 1) }}<br />
            <span class="light">
                {{ Lang.get('user.organisation_user_desc')|raw }}
            </span>
        </div>
    </div>
    {% endif %}
